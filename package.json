{
  "name": "@mertercelik/react-prize-wheel",
  "version": "1.0.0",
  "description": "A customizable and animated prize wheel component for React",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "vite build --mode demo",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir docs --base /react-prize-wheel/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "wheel",
    "prize",
    "fortune",
    "spin",
    "lucky",
    "game",
    "animation",
    "gsap",
    "component"
  ],
  "author": "Mert Ercelik <mertercelik>",
  "contributors": [
    {
      "name": "Soma Szoboszlai",
      "url": "https://codepen.io/szsoma/pen/bYEXGx"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mertercelik/react-prize-wheel.git"
  },
  "bugs": {
    "url": "https://github.com/mertercelik/react-prize-wheel/issues"
  },
  "homepage": "https://mertercelik.github.io/react-prize-wheel/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0"
  }
}
